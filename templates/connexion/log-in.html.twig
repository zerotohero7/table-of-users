{% extends 'base.html.twig' %}
{% block title 'log-in' %}
{% block  body %}

     <div class="bg-white mb-24 mt-20 mx-auto p-8 rounded-lg shadow-lg w-96 ">
        <h2 class="text-2xl font-semibold mb-4">Log In</h2>
        <form id="myFormLog">
            <div class="mb-4">
                <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                <input type="email" id="email_log" name="email" placeholder="Email" class="border rounded-md py-2 px-3 w-full focus:outline-none focus:ring focus:border-blue-300" required>
            </div>
            <div class="mb-4">
                <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
                <input type="password" id="password_log" name="password" placeholder="Password" class="border rounded-md py-2 px-3 w-full focus:outline-none focus:ring focus:border-blue-300" required>
            </div>
            <div class="mb-4">
                <button type="submit" class="bg-blue w-full text-white py-2 px-4 rounded-md ">Log In</button>
            </div>
        </form>
    </div>






{% endblock %}  