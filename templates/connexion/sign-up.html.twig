{% extends 'base.html.twig' %}
{% block title 'sign-up' %}
{% block  body %}

    <div class="bg-white  p-8 mx-auto my-10 rounded-lg shadow-lg w-96 ">
        <h2 class="text-2xl font-semibold mb-4">Sign Up</h2>
        <form id="myFormSign" action="#" method="post">
            <div class="mb-4">
                <label id="label_name_sign" for="name" class="block text-gray-700 text-sm font-bold mb-2">Name</label>
                <input id="name_sign"  type="text" name="name" minlength="3" placeholder="Name" class="border rounded-md py-2 px-3 w-full focus:outline-none focus:ring focus:border-blue-300" >
                <p id="text_name_sign" class="text-red-500 hidden" >Name is required</p>
            </div>
            <div class="mb-4">
                <label id="label_email_sign" for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                <input type="email" id="email_sign" name="email" placeholder="Email" class="border rounded-md py-2 px-3 w-full focus:outline-none focus:ring focus:border-blue-300" >
                <p id="text_email_sign1" class="text-red-500 hidden" >email address is required</p>
                <p id="text_email_sign2" class="text-red-500 hidden" >email is invalid</p>
            </div>
            <div class="mb-4">
                <label id="label_password_sign" for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
                <input type="password" id="password_sign" name="password" placeholder="Password" class="border rounded-md py-2 px-3 w-full focus:outline-none focus:ring focus:border-blue-300">
                <p id="text_password_sign" class="text-red-500 hidden" >Password must be at least 6 characters</p>
            </div>
            <div class="mb-6">
                <label id="label_passwordConfirmation_sign" for="password_confirmation" class="block text-gray-700 text-sm font-bold mb-2">Confirm Password</label>
                <input type="password" id="password_confirmation_sign" name="password_confirmation" placeholder="Password" class="border rounded-md py-2 px-3 w-full focus:outline-none focus:ring focus:border-blue-300">
                <p id="text_passwordConfirmation_sign1" class="text-red-500 hidden" >PasswordConfirmation must be at least 6 characters</p>
                <p id="text_passwordConfirmation_sign2" class="text-red-500 hidden" >confirmation password must be equal to password</p>
            </div>
            <div class="mb-4">
                {# <input type="submit" value="Submit" class=" bg-blue-500 w-full text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:border-blue-300" input> #}
                <button type="submit" class=" bg-blue w-full text-white py-2 px-4 rounded-md">Sign Up</button>

            </div>
        </form>
    </div>





{% endblock %}  